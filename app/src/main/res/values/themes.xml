<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Jariahxp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/purple_500</item>

    </style>
    <style name="Base.ThemeOverlay.Material3.TextInputEditText." parent="">
        <item name="hintTextColor">@color/black</item>
        <item name="android:editTextColor">@color/black</item>

    </style>
    <style name="Theme.Jariahxp" parent="Base.Theme.Jariahxp" />
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>

    </style>
    <style name="DialogAnimation2" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    <style name="ActivityAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/flip_in</item>
        <item name="android:activityOpenExitAnimation">@anim/flip_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/flip_out</item>
        <item name="android:activityCloseExitAnimation">@anim/flip_in</item>
    </style>

</resources>